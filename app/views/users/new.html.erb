<% provide(:page_title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for(@user, url: signup_path,
                        html: {class: 'wide-inputs', autocomplete: 'off'}) do |f| %>
      <%= f.input :name, input_html: {autocorrect: 'off', autocapitalize: 'off'} %>
      <%= f.input :email %>
      <%= f.input :password %>
      <%= f.input :password_confirmation, required: true %>
      <%= f.submit class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
