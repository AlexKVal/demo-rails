<div class="panel panel-default">
  <div class="panel-body">
    <%= simple_form_for :session, url: login_path, defaults: {label: false}, remote: true do |f| %>
      <div class="form-group">
      <%= f.input :email, required: true,
                  input_html: { autocomplete: "email", value: session[:data_email] } %>

      <div class="form-group">
        <table class="flex-table">
          <tbody>
            <tr>
              <td class="flex-table-primary">
                <%= f.input_field :password, class: 'form-control', required: true %>
              </td>
              <td class="flex-table-secondary">
                <%= f.submit class: 'btn btn-primary' %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="remember-forgot text-muted">
        <label class="remember">
          <%= f.check_box :remember_me, checked: true %>
          <span><%= t(:remember_me) %></span>
        </label>
        <span class="separator">Â·</span>
        <%= link_to t(:forgot_password), new_password_reset_path, rel: 'noopener' %>
      </div>
    <% end %>
  </div>
</div>
