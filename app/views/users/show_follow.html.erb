<% content_for :aside do %>
  <section class="user_info">
    <%= render 'user_info' %>
  </section>
  <section class="stats">
    <div class="panel panel-default">
      <div class="panel-body text-center">
        <%= render 'stats' %>
      </div>
      <% if @users.any? %>
        <div class="panel-footer user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>
<% end %>

<% content_for :main_title do %>
  <%= title %>
<% end %>

<% content_for :main_list do %>
  <% if @users.any? %>
    <ul class="list-group">
      <%= render @users %>
    </ul>
    <%= will_paginate class: 'panel-footer' %>
  <% end %>
<% end %>

<%= render template: 'layouts/two_columns' %>
