<% if current_user.following?(@user) %>
  <%= button_to t(:unfollow), current_user.active_relationships.find_by(followed: @user),
                method: :delete, remote: true,
                class: 'btn btn-default btn-block' %>
<% else %>
  <%= button_to t(:follow), relationships_path,
                params: {followed: @user}, remote: true,
                class: 'btn btn-primary btn-block' %>
<% end %>
