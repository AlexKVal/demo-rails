<mj-section background-color="white">
  <mj-column>
    <mj-text font-size="16"><%= t('.hi', name: @user.name) %></mj-text>

    <mj-text>
      <%= t('.welcome', app_name: Rails.configuration.app_name) %>
      <%= t('.click') %>
    </mj-text>

    <mj-spacer height="20px" />

    <mj-button mj-class="btn-cta"
      href="<%= account_activate_url(@token, email: @user.email) %>">
      <%= t('.activate') %>
    </mj-button>
  </mj-column>
</mj-section>
