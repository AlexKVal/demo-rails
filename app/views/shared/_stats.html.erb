<% @user ||= current_user %>
<div class="row">
  <div class="col-xs-6">
    <a href="<%= following_user_path(@user) %>">
      <span id="following" class="stat badge">
        <%= @user.following.count %>
      </span>
      following
    </a>
  </div>
  <div class="col-xs-6">
    <a href="<%= followers_user_path(@user) %>">
      <span id="followers" class="stat badge">
        <%= followers_count = @user.followers.count %>
      </span>
      <%= "followers".pluralize(followers_count) %>
    </a>
  </div>
</div>
