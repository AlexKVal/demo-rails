<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <a href="http://gravatar.com/emails" target="_blank" rel="noopener noreferrer">
              <%= gravatar_for(@user) %>
            </a>
            <%= link_to @user.name, edit_user_path(@user) %>
          </h3>
        </div>
        <div class="panel-body text-center">
          <%= render 'shared/stats' %>
        </div>
        <%= render 'follow_form' if logged_in? %>
      </div>
    </section>
  </aside>
  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Microposts <span class="badge"><%= @user.microposts.count %></span></h3>
      </div>
      <ul class="list-group microposts">
        <%= render @microposts %>
      </ul>
      <%= will_paginate @microposts, class: 'panel-footer' %>
    </div>
  </div>
</div>
