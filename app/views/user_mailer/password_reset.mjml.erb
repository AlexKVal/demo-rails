<mj-section background-color="white">
  <mj-column>
    <mj-text font-size="18px" align="center">
      To reset your password click the button:
    </mj-text>

    <mj-spacer height="20px" />

    <mj-button mj-class="btn-cta"
      href="<%= reset_password_url(@token, email: @user.email) %>">
      Reset password
    </mj-button>

    <mj-spacer height="20px" />
    <mj-divider border-width="1px" border-color="lightgrey" />

    <mj-text mj-class="fine-print">
      This link will expire in two hours.
      <br>
      If you did not request your password to be reset, just ignore this email.
    </mj-text>
  </mj-column>
</mj-section>
