<% provide(:page_title, 'Reset password') %>
<h1>Reset password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for @user, url: password_reset_path(params[:id]),
                        defaults: {label: false}, html: {class: 'wide-inputs'} do |f| %>
      <%= hidden_field_tag :email, @user.email %>
      <%= f.input :password, placeholder: t('password_reset.password') %>
      <%= f.input :password_confirmation, placeholder: t('password_reset.confirm') %>
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
