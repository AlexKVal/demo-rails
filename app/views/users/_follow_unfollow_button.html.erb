<% if current_user.following?(@user) %>
  <%= button_to t(:unfollow), unfollow_user_path(@user), method: :patch, remote: true,
              class: 'btn btn-default btn-block' %>
<% else %>
  <%= button_to t(:follow), follow_user_path(@user), method: :patch, remote: true,
              class: 'btn btn-primary btn-block' %>
<% end %>
