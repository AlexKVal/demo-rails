<% content_for :aside do %>
  <%= render 'user_info' %>

  <%= render 'avatars_block' %>
<% end %>

<% content_for :main_title do %>
  <%= title %>
<% end %>

<% content_for :main_list do %>
  <% if @users.any? %>
    <ul class="list-group">
      <%= render @users %>
    </ul>
    <%= will_paginate class: 'panel-footer' %>
  <% end %>
<% end %>

<%= render template: 'layouts/two_columns' %>
