<li class="list-group-item">
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <span class="label label-info microposts-count"><%= user.microposts_count %></span>
  <% if current_user.admin? && !current_user?(user) %>
    <%= link_to "(#{t(:delete)})", user, method: :delete, data: { confirm: t(:you_sure) } %>
  <% end %>
</li>
