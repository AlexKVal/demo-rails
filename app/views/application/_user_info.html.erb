<% @user ||= current_user %>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= gravatar_for(@user) %>
      <%= link_to @user.name, @user %>
      <% if current_user?(@user) %>
        <span class='edit-link'><%= link_to "(#{t(:edit)})", edit_user_path(@user) %></span>
      <% end %>
    </h3>
  </div>

  <div class="panel-body text-center">
    <%= render 'stats' %>
  </div>

  <% if logged_in? %>
    <% if !current_user?(@user) %>
      <div class="panel-footer" id="follow_unfollow">
        <%= render 'follow_unfollow_button' %>
      </div>
    <% elsif !current_page?(user_path(@user)) %>
      <div class="panel-footer text-center">
        <%= render 'view_profile_link' %>
      </div>
    <% end %>
  <% end %>
</div>
