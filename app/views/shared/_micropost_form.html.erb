<%= form_for(@micropost, html: {class: 'wide-inputs'}) do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
  </div>

  <div class="input-group add-picture">
    <label class="input-group-btn">
      <span class="btn btn-info">
        Browse&hellip; <%= f.file_field :picture, accept: 'image/*', style: "display: none;" %>
      </span>
    </label>
    <input id="file_name" type="text" placeholder="Add a picture..." class="form-control" readonly>
    <div class="input-group-btn unselect-picture hidden">
      <button class="btn btn-warning">
        <i class="glyphicon glyphicon-remove"></i>
      </button>
    </div>
  </div>

  <%= f.submit "Post", class: "btn btn-success", name: nil %>
<% end %>
