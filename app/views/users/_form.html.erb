<%= simple_form_for(@user, url: url, html: {class: 'wide-inputs', autocomplete: 'off'}) do |f| %>
  <%= f.input :name, input_html: {autocorrect: 'off', autocapitalize: 'off'} %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation, required: true %>
  <%= f.submit submit_text, class: "btn btn-primary" %>
<% end %>
