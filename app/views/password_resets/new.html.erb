<% provide(:page_title, 'Forgot password') %>
<h1>Forgot password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= simple_form_for :password_reset, url: password_resets_path, html: {class: 'wide-inputs'} do |f| %>
      <%= f.input :email, input_html: { autocomplete: "email" }, label: false, required: true %>
      <%= f.submit class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
