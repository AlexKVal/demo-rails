<% provide(:page_title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user-info">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">
            <%= gravatar_for(@user) %>
            <%= @user.name %>
            <% if current_user?(@user) %>
              <span class='edit-link'><%= link_to "(#{t(:edit)})", edit_user_path(@user) %></span>
            <% end %>
          </h3>
        </div>

        <div class="panel-body text-center">
          <%= render 'stats' %>
        </div>

        <%= render 'follow_form' if logged_in? %>
      </div>
    </section>
  </aside>

  <div class="col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= t(:microposts) %> <span class="badge"><%= @user.microposts_count %></span></h3>
      </div>
      <ul class="list-group microposts">
        <%= render @microposts %>
      </ul>
      <%= will_paginate @microposts, class: 'panel-footer' %>
    </div>
  </div>
</div>
